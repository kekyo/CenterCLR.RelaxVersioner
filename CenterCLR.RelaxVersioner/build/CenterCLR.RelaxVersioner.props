<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" TreatAsLocalProperty="_RV_PlatformName;_RV_RuntimeName;_RV_ExecutableName;_RV_ToolingDir">
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Core'">
    <_RV_PlatformName Condition="'$(MicrosoftNETBuildTasksTFM)' != ''">$(MicrosoftNETBuildTasksTFM)</_RV_PlatformName>
    <_RV_PlatformName Condition="'$(MicrosoftNETBuildTasksTFM)' == ''">netcoreapp3.1</_RV_PlatformName>
    <_RV_RuntimeName>dotnet </_RV_RuntimeName>
    <_RV_ExecutableName>rv.dll</_RV_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Full'">
    <_RV_PlatformName>net46</_RV_PlatformName>
    <_RV_RuntimeName></_RV_RuntimeName>
    <_RV_ExecutableName>rv.exe</_RV_ExecutableName>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildRuntimeType)' == 'Mono'">
    <_RV_PlatformName>net46</_RV_PlatformName>
    <_RV_RuntimeName>mono </_RV_RuntimeName>
    <_RV_ExecutableName>rv.exe</_RV_ExecutableName>
  </PropertyGroup>
  <PropertyGroup>
    <RelaxVersionerToolingRuntimeName>$(_RV_RuntimeName)</RelaxVersionerToolingRuntimeName>
    <_RV_ToolingDir>$([System.IO.Path]::Combine('$(MSBuildThisFileDirectory)','..','tools','$(_RV_PlatformName)'))</_RV_ToolingDir>
    <RelaxVersionerToolingDir>$([System.IO.Path]::GetFullPath('$(_RV_ToolingDir)'))</RelaxVersionerToolingDir>
    <RelaxVersionerToolingPath>$([System.IO.Path]::Combine('$(RelaxVersionerToolingDir)','$(_RV_ExecutableName)'))</RelaxVersionerToolingPath>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
  </PropertyGroup>
</Project>
