<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40;net46;netstandard2.0</TargetFrameworks>
    <OutputType>Library</OutputType>

    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>

    <RootNamespace>CenterCLR.RelaxVersioner</RootNamespace>
    <AssemblyTitle>CenterCLR.RelaxVersioner.Tasks</AssemblyTitle>
    <Product>CenterCLR.RelaxVersioner</Product>
    <Trademark>CenterCLR.RelaxVersioner</Trademark>
    <Copyright>Copyright (c) 2016-2019 Kouji Matsui</Copyright>
    <Description>Easy-usage, Git-based, auto-generate version informations toolset.</Description>
    <Company>Kouji Matsui (@kozy_kekyo, @kekyo2)</Company>
    <Authors>Kouji Matsui (@kozy_kekyo, @kekyo2)</Authors>
    <RepositoryType>git</RepositoryType>
    <PackageId>CenterCLR.RelaxVersioner</PackageId>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/kekyo/CenterCLR.RelaxVersioner.git</PackageProjectUrl>
    <PackageIconUrl>https://github.com/kekyo/CenterCLR.RelaxVersioner/raw/master/Images/CenterCLR.RelaxVersioner.100.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/kekyo/CenterCLR.RelaxVersioner.git</RepositoryUrl>
    <PackageTags>version;generator;git;auto;easy;generate;versioning;continuous;integration;delivery;tag;branch;assemblyinfo;msbuild;tool</PackageTags>
    <LangVersion>7.3</LangVersion>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Platforms>AnyCPU</Platforms>

    <NoPackageAnalysis>true</NoPackageAnalysis>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);CopyUnplacedNativeBinaries;GetPublishFilesForPack</TargetsForTfmSpecificContentInPackage>
    
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CenterCLR.NamingFormatter" version="2.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net40'">
    <Reference Include="Microsoft.Build.Framework" />
    <Reference Include="Microsoft.Build.Utilities.v4.0" />
    <PackageReference Include="LibGit2Sharp" version="0.24.1" PrivateAssets="All" />
    <PackageReference Include="LibGit2Sharp.NativeBinaries" version="1.0.205" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net40'">
    <PackageReference Include="Microsoft.Build.Framework" Version="15.6.82" PrivateAssets="All" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.6.82" PrivateAssets="All" />
    <PackageReference Include="LibGit2Sharp" version="0.26.1" PrivateAssets="All" />
    <PackageReference Include="LibGit2Sharp.NativeBinaries" version="2.0.289" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="build\CenterCLR.RelaxVersioner.props" PackagePath="build/" />
    <Content Include="build\CenterCLR.RelaxVersioner.targets" PackagePath="build/" />
    <Content Include="buildMultiTargeting\CenterCLR.RelaxVersioner.props" PackagePath="buildMultiTargeting/" />
    <Content Include="buildMultiTargeting\CenterCLR.RelaxVersioner.targets" PackagePath="buildMultiTargeting/" />
    <EmbeddedResource Include="DefaultRuleSet.rules" />
  </ItemGroup>

  <!-- HACK: LibGit2Sharp.NativeBinaries copied native libs into net46, but didn't copy into netstandard2.0 (don't know why) -->
  <Target Name="CopyUnplacedNativeBinaries" DependsOnTargets="Publish" Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <ItemGroup>
      <UnplacedNativeBinaries Include="$(PublishDir)/../../net46/lib/**" />
    </ItemGroup>
    <Copy SourceFiles="@(UnplacedNativeBinaries)" DestinationFiles="@(UnplacedNativeBinaries->'$(PublishDir)/lib/%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
  </Target>

  <Target Name="GetPublishFilesForPack" DependsOnTargets="Publish">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(PublishDir)/**/*.*" PackagePath="tasks/$(TargetFramework)/%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>
  </Target>

</Project>
