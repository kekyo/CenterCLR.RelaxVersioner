<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
    <OutputType>Library</OutputType>

    <LangVersion>8.0</LangVersion>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Platforms>AnyCPU</Platforms>
    
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>

    <RootNamespace>CenterCLR.RelaxVersioner</RootNamespace>
    <AssemblyTitle>CenterCLR.RelaxVersioner.Tasks</AssemblyTitle>
    <Product>CenterCLR.RelaxVersioner</Product>
    <Trademark>CenterCLR.RelaxVersioner</Trademark>
    <Copyright>Copyright (c) 2016-2019 Kouji Matsui</Copyright>
    <Description>Easy-usage, Git-based, auto-generate version informations toolset.</Description>
    <Company>Kouji Matsui (@kozy_kekyo, @kekyo2)</Company>
    <Authors>Kouji Matsui (@kozy_kekyo, @kekyo2)</Authors>
    <RepositoryType>git</RepositoryType>
    <PackageId>CenterCLR.RelaxVersioner</PackageId>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/kekyo/CenterCLR.RelaxVersioner.git</PackageProjectUrl>
    <PackageIconUrl>https://github.com/kekyo/CenterCLR.RelaxVersioner/raw/master/Images/CenterCLR.RelaxVersioner.100.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/kekyo/CenterCLR.RelaxVersioner.git</RepositoryUrl>
    <PackageTags>version;generator;git;auto;easy;generate;versioning;continuous;integration;delivery;tag;branch;assemblyinfo;msbuild;tool</PackageTags>
    <DevelopmentDependency>true</DevelopmentDependency>

    <NoPackageAnalysis>true</NoPackageAnalysis>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);GetPublishFilesForPack</TargetsForTfmSpecificContentInPackage>
    
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
  </PropertyGroup>

  <!-- HACK: The publish folder doesn't contain any required assemblies when invoke from dotnet cli.
    https://github.com/dotnet/cli/issues/8340
    Applied Publish attribute.
  -->

  <ItemGroup>
    <PackageReference Include="CenterCLR.NamingFormatter" version="2.0.0" PrivateAssets="All" Publish="true" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" Version="15.6.82" PrivateAssets="All" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.6.82" PrivateAssets="All" />
    <PackageReference Include="LibGit2Sharp" version="0.26.1" PrivateAssets="All" Publish="true" />
    <PackageReference Include="LibGit2Sharp.NativeBinaries" version="2.0.289" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="build\CenterCLR.RelaxVersioner.props" PackagePath="build/" />
    <Content Include="build\CenterCLR.RelaxVersioner.targets" PackagePath="build/" />
    <Content Include="buildMultiTargeting\CenterCLR.RelaxVersioner.props" PackagePath="buildMultiTargeting/" />
    <Content Include="buildMultiTargeting\CenterCLR.RelaxVersioner.targets" PackagePath="buildMultiTargeting/" />
    <EmbeddedResource Include="DefaultRuleSet.rules" />
  </ItemGroup>

  <ItemGroup>
    <!-- Strictly applied only netstandard2.0 because the runtime folder path valid only it environment. -->
    <Content Include="$(libgit2_propsfile)\..\..\runtimes\**\*" PackagePath="build/runtimes/" />
  </ItemGroup>

  <Target Name="GetPublishFilesForPack" DependsOnTargets="Publish">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(PublishDir)\**\*.*" PackagePath="build\$(TargetFramework)\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>
  </Target>

</Project>
